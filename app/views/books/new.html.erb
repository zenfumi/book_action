<% provide(:title, '本の登録') %>
<h1>本の登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @book, local: true) do |f| %>
      <%= f.label :image %>
      <span class="image">
      <%= f.file_field :image %>
      </span>

      <%= f.label :title %>
      <%= f.email_field :title %>

      <%= f.label :author %>
      <%= f.password_field :author %>

      <%= f.submit "本を登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>